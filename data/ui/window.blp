using Gtk 4.0;
using Adw 1;

template $ExampleMainWindow : Adw.ApplicationWindow {
    title: "Example";
    default-width: 400;
    default-height: 350;
    
    Box {
        orientation: vertical;
        
        Adw.HeaderBar {}
        
        Box {
            orientation: vertical;
            halign: center;
            valign: center;
            hexpand: true;
            vexpand: true;
            
            Label {
                styles ["title-1"]
                label: "Hello, world!";
            }
        }
    }
}

